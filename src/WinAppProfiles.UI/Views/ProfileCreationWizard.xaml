<Window x:Class="WinAppProfiles.UI.Views.ProfileCreationWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create New Profile" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="BackgroundPrimary" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundSecondary" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BackgroundTertiary" Color="#3E3E42"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="AccentPrimary" Color="#0078D4"/>
        <SolidColorBrush x:Key="AccentHover" Color="#1084D8"/>
        <SolidColorBrush x:Key="AccentPressed" Color="#006CBE"/>

        <!-- Button Styles -->
        <Style x:Key="WizardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentPressed}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryWizardButtonStyle" TargetType="Button" BasedOn="{StaticResource WizardButtonStyle}">
            <Setter Property="Background" Value="{StaticResource BackgroundTertiary}"/>
        </Style>

        <!-- Option Card Style -->
        <Style x:Key="OptionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Create New Profile"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Follow the steps below to create a new profile"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Content Area (changes based on step) -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundSecondary}" CornerRadius="8" Padding="25">
            <Grid>
                <!-- Step 1: Profile Name -->
                <StackPanel x:Name="Step1Panel" Visibility="{Binding Step1Visible}">
                <TextBlock Text="Step 1 of 2"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource AccentPrimary}"
                           Margin="0,0,0,15"/>
                <TextBlock Text="What would you like to call this profile?"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,20"/>
                <TextBlock Text="Profile Name:"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16"
                         Padding="12"
                         Background="{StaticResource BackgroundTertiary}"
                         Foreground="{StaticResource TextPrimary}"
                         BorderThickness="0"
                         BorderBrush="Transparent"
                         CaretBrush="{StaticResource TextPrimary}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                        Focusable="false"
                                                        HorizontalScrollBarVisibility="Hidden"
                                                        VerticalScrollBarVisibility="Hidden"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="Enter a descriptive name for your new profile (e.g., 'Work', 'Gaming', 'Development')"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Step 2: Population Method -->
            <StackPanel x:Name="Step2Panel" Visibility="{Binding Step2Visible}">
                <TextBlock Text="Step 2 of 2"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource AccentPrimary}"
                           Margin="0,0,0,15"/>
                <TextBlock Text="How would you like to populate this profile?"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,25"/>

                <!-- Option 1: Capture Running -->
                <Border Style="{StaticResource OptionCardStyle}"
                        Margin="0,0,0,15"
                        MouseDown="CaptureRunning_Click">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¸ Capture Current Running Applications"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Automatically add all currently running applications and services to this profile. This is the quickest way to save your current system state."
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Option 2: Manual -->
                <Border Style="{StaticResource OptionCardStyle}"
                        MouseDown="ManualPopulate_Click">
                    <StackPanel>
                        <TextBlock Text="âœï¸ Start with Empty Profile"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Create an empty profile and manually add applications and services later. Choose this if you want to build your profile from scratch."
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            </Grid>
        </Border>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Back"
                    Style="{StaticResource SecondaryWizardButtonStyle}"
                    Command="{Binding BackCommand}"
                    Visibility="{Binding BackButtonVisible}"
                    Margin="0,0,10,0"/>
            <Button Grid.Column="2"
                    Content="{Binding NextButtonText}"
                    Style="{StaticResource WizardButtonStyle}"
                    Command="{Binding NextCommand}"
                    IsEnabled="{Binding CanProceed}"/>
        </Grid>
    </Grid>
</Window>
