<Window x:Class="WinAppProfiles.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:WinAppProfiles.Core.Models;assembly=WinAppProfiles.Core"
        xmlns:vm="clr-namespace:WinAppProfiles.UI.ViewModels"
        mc:Ignorable="d"
        Title="WinAppProfiles"
        Background="{DynamicResource Theme.WindowBackgroundBrush}"
        Foreground="{DynamicResource Theme.ForegroundBrush}"
        Height="560"
        Width="940"
        MinHeight="500"
        MinWidth="900">
    <Window.Resources>
        <vm:BooleanInverterConverter x:Key="BooleanInverterConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <vm:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <ObjectDataProvider x:Key="DesiredStateValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:DesiredState" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{DynamicResource Theme.SurfaceBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource Theme.ControlBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
        </Style>





        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Theme.ControlBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource Theme.SurfaceBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource Theme.ControlBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource Theme.SurfaceBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Theme.AccentBrush}" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="{DynamicResource Theme.BorderBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource Theme.ForegroundBrush}" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="24" FontWeight="SemiBold" Text="Application Profiles" />
            <CheckBox Grid.Column="1"
                      Content="Dark Mode"
                      VerticalAlignment="Center"
                      IsChecked="{Binding IsDarkMode}" />
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,12">
            <TextBlock VerticalAlignment="Center" Text="Profile:" Margin="0,0,8,0" />
            <ComboBox Width="320"
                      ItemsSource="{Binding Profiles}"
                      SelectedItem="{Binding SelectedProfile}"
                      DisplayMemberPath="Name" />
            <Button Content="New Profile"
                    Command="{Binding NewProfileCommand}"
                    Margin="12,0,0,0"
                    Visibility="{Binding IsCreatingProfile, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
            <StackPanel Orientation="Horizontal"
                        Margin="12,0,0,0"
                        Visibility="{Binding IsCreatingProfile, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock VerticalAlignment="Center" Text="New Profile Name:" Margin="0,0,8,0" />
                <TextBox Width="180"
                         VerticalContentAlignment="Center"
                         Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Save" Command="{Binding SaveNewProfileCommand}" Margin="8,0,0,0" />
                <Button Content="Cancel" Command="{Binding CancelNewProfileCommand}" Margin="8,0,0,0" />
            </StackPanel>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="12,0,0,0" />
            <Button Content="Apply Profile" Command="{Binding ApplyCommand}" Margin="8,0,0,0" />
            <Button Content="Save Profile" Command="{Binding SaveCommand}" Margin="8,0,0,0" />
            <Button Content="Settings" Command="{Binding OpenSettingsCommand}" Margin="8,0,0,0" />
            <CheckBox Content="Edit Mode" IsChecked="{Binding IsAdvancedMode}" Margin="16,2,0,0" />

            <StackPanel Orientation="Horizontal" Margin="16,0,0,0"
                        Visibility="{Binding IsAdvancedMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock VerticalAlignment="Center" Text="Bulk State:" Margin="0,0,8,0" />
                <ComboBox Width="120"
                          ItemsSource="{Binding Source={StaticResource DesiredStateValues}}"
                          SelectedItem="{Binding SelectedDesiredStateForBulkApply}" />
            </StackPanel>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Profile Items" Margin="0,0,0,12">
            <DataGrid x:Name="ProfileItemsDataGrid"
                      ItemsSource="{Binding SelectedProfileItems}"
                      SelectedItem="{Binding SelectedProfileItem, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="{Binding IsAdvancedMode, Converter={StaticResource BooleanInverterConverter}}"
                      SelectionChanged="ProfileItemsDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Target" Binding="{Binding DisplayName}" Width="2*" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                    <DataGridTextColumn Header="Type" Binding="{Binding TargetType}" Width="*" />
                    <DataGridTextColumn Header="Current State" Binding="{Binding CurrentState}" Width="*" />
                    <DataGridComboBoxColumn Header="Desired"
                                            Width="*"
                                            SelectedItemBinding="{Binding DesiredState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            ItemsSource="{Binding Source={StaticResource DesiredStateValues}}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Needs Review" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="Type:" Margin="0,0,8,0" />
                        <ComboBox Width="140"
                                  ItemsSource="{Binding NeedsReviewTypeFilters}"
                                  SelectedItem="{Binding SelectedNeedsReviewTypeFilter}" />
                        <TextBlock VerticalAlignment="Center" Text="Search:" Margin="12,0,8,0" />
                        <TextBox Width="260"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding NeedsReviewSearchText, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Add"
                            Command="{Binding AddSelectedNeedsReviewCommand}"
                            Visibility="{Binding HasNeedsReviewSelection, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding NeedsReviewView}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          SelectionChanged="NeedsReviewGrid_SelectionChanged"
                          MouseDoubleClick="NeedsReviewGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Target" Binding="{Binding DisplayName}" Width="2*" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                        <DataGridTextColumn Header="Type" Binding="{Binding TargetType}" Width="*" />
                        <DataGridTextColumn Header="Current State" Binding="{Binding CurrentState}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <TextBlock Grid.Row="4"
                   x:Name="StatusBarTextBlock"
                   Text="{Binding StatusMessage}"
                   MouseLeftButtonDown="StatusBarTextBlock_MouseLeftButtonDown"
                   Foreground="{DynamicResource Theme.MutedForegroundBrush}" />
    </Grid>
</Window>
